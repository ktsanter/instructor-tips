doctype html
html(lang="en")
  head
    title roster manager
    meta(charset="utf-8")
    
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.2/css/all.css", integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay", crossorigin="anonymous")    

    style
      include ../../common/styles/sliderswitch.css
      include ../../common/styles/select.css
      include ../styles/roster-manager.css
    
    script(data-main="/scripts/roster-manager/require_roster-manager", src="/scripts/require.js")    
      
  body(class="colorscheme")    
    .titlecontainer
        .titletext
            |Roster manager
            
    form(class="userform studentform" action="roster-manager/student" enctype="multipart/form-data" method="post")
      .form-title student report
      
      .form-row
        label(for="student-report-file" class="formfield-label") student report file
        input(type="file" class="file-select" name="student-report-file" accept=".xlsx" required title="student report file to process")
        
      .form-row
        label(for="chkStudentCompare" class="formfield-label") compare to...
        input(type="checkbox" id="chkStudentCompare" class="check-student-compare" title="optionally compare to older file")
        .suboption.student-compare(class="hide-me")
          input(type="file" class="file-select student-report-file2" name="student-report-file2" accept=".xlsx" title="older student report file for comparison")
        
      .form-row.submit-region
        input(class="form-submit" type="submit" value="process")
        
    form(class="userform mentorform" action="roster-manager/mentor" enctype="multipart/form-data" method="post")
      .form-title mentor report
      
      .form-row
        label(for="mentor-report-file" class="formfield-label") mentor report file
        input(type="file" class="file-select" name="mentor-report-file" accept=".xlsx" required title="mentor report file to process")
        
      .form-row
        label(for="chkMentorCompare" class="formfield-label") compare to...
        input(type="checkbox" id="chkMentorCompare" class="check-mentor-compare" title="optionally compare to older file")
        .suboption.mentor-compare(class="hide-me")
          input(type="file" class="file-select mentor-report-file2" name="mentor-report-file2" accept=".xlsx" title="older mentor report file for comparison")
        
      .form-row.submit-region
        input(class="form-submit" type="submit" value="process")
        
