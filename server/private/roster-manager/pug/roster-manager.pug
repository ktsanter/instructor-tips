doctype html
html(lang="en")
  head
    title roster manager
    meta(charset="utf-8")
    
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.2/css/all.css", integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay", crossorigin="anonymous")    

    style
      include ../../common/styles/sliderswitch.css
      include ../../common/styles/select.css
      include ../styles/roster-manager.css
    
    script(data-main="/scripts/roster-manager/require_roster-manager", src="/scripts/require.js")    
      
  body(class="colorscheme")    
    .titlecontainer
        .titletext
            |Roster manager
            
    form(class="userform enrollmentform" action="roster-manager/enrollment" enctype="multipart/form-data" method="post")
      .form-title enrollment report
      
      .form-row
        label(for="enrollment-report-file" class="formfield-label") enrollment report file
        input(type="file" class="file-select" name="enrollment-report-file" accept=".xlsx" required title="enrollment report file to process")
        
      .form-row
        label(for="chkEnrollmentCompare" class="formfield-label") compare to...
        input(type="checkbox" id="chkEnrollmentCompare" class="check-enrollment-compare" title="optionally compare to older file")
        .suboption.enrollment-compare()
          input(type="file" class="file-select enrollment-report-file2" name="enrollment-report-file2" accept=".xlsx" disabled title="older enrollment report file for comparison")
        
      .form-row.submit-region
        input(class="form-submit" type="submit" value="process")
        
    form(class="userform mentorform" action="roster-manager/mentor" enctype="multipart/form-data" method="post")
      .form-title mentor report
      
      .form-row
        label(for="mentor-report-file" class="formfield-label") mentor report file
        input(type="file" class="file-select" name="mentor-report-file" accept=".xlsx" required title="mentor report file to process")
        
      .form-row
        label(for="chkMentorCompare" class="formfield-label") compare to...
        input(type="checkbox" id="chkMentorCompare" class="check-mentor-compare" title="optionally compare to older file")
        .suboption.mentor-compare()
          input(type="file" class="file-select mentor-report-file2" name="mentor-report-file2" accept=".xlsx" disabled title="older mentor report file for comparison")
        
      .form-row.submit-region
        input(class="form-submit" type="submit" value="process")
        
