doctype html
html
  head
    title InstructorTips schedule reminder wrapper
    meta(charset="utf-8")
      
  body  
    - var imageFileCID = 'cid:' + params.imageFileCID
    - var appURL = params.appURL
    - var imagemapId = '#imagemap'
    
    img(src=imageFileCID, alt="InstructorTips reminder", usemap="imagemapId")
    map(name=imagemap)
      area(shape="rect", coords="200,25, 285,40", href=appURL)
    
    br
    
    div
      |You can access InstructorTips at &nbsp;
      a(href=appURL) !{appURL}
