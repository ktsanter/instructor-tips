mixin editingCourses()
  .row
    .col-sm
      .form-floating
        select(class="form-select select-course" id="selectCourse" aria-label="select course")
        label(for="selectCategory") course

    .col-sm-2
      i(class="edit-control edit-control-course far fa-plus-square me-2 add" title="add course")
      i(class="edit-control edit-control-course edit-control-course-conditional fas fa-sync me-2 reload" title="reload course")
      i(class="edit-control edit-control-course edit-control-course-conditional far fa-save me-2 save" title="save course")
      i(class="edit-control edit-control-course edit-control-course-conditional far fa-trash-alt me-2 delete" title="delete course")

  .row(class="course-edit-container mt-3")
    .container-fluid  
      .row
        .col-sm
          .form-floating
            input(type="text" class="form-control course-name" id="txtCourseName")
            label(for="txtCourseName") course name
            
      .row(class="mt-3")
        .col-sm(class="ps-4")
          .form-check
            input(type="checkbox" class="form-check-input course-isap" id="chkAP")
            label(class="form-check-label pt-1" for="chkAP") AP course
        
      .row(class="selected-keypoint-row mt-4")
        .col-sm(class="ps-4")
          .keypoint-container-selected
          
          .item-template(class="keypoint-item hide-me")
            .row
              .col-sm-1(class="p-1")
                i(class="edit-control edit-control-course deselect fas fa-times me-2" title="remove from keypoints for course")
                i(class="edit-control edit-control-course moveup fas fa-long-arrow-alt-up" title="move up in order")
                i(class="edit-control edit-control-course select fas fa-plus" title="add to keypoints for course")
              
              .col-sm-2
                input(type="text" class="form-control form-control-plaintext p-0 aardvark-font keypoint-category" readonly)

              .col-sm
                input(type="text" class="form-control form-control-plaintext p-0 aardvark-font keypoint-text" readonly)
          
      .row(class="mt-4")
        .col-sm(class="ps-4")
          .keypoint-container-unselected
        
      .row(class="mt-3")
        .col-sm
          .form-floating
            input(type="text" class="form-control course-assessments" id="txtCourseAssessments")
            label(for="txtCourseAssessments") assessments (array)
            
    
