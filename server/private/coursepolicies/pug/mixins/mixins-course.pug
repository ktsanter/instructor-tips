mixin courseContainer()
  .row
    .col-sm
      .form-floating
        select(class="form-select select-course" id="selectCourse" aria-label="select course")
        label(for="selectCourse") course

    .col-sm
      
  .row(class="keypoints-outer mt-4 hide-me")
    .col-sm
      fieldset(class="border configure-fieldset required pb-2")
        legend(class="w-auto") key points for mentors
        
        .container-fluid
          .row(class="mb-1")
            .col-sm 
              li(class="keypoint-item template keypoint-template hide-me")
              ul(class="keypoints-container")

  .row(class="assessments-outer mt-4 hide-me")
    .col-sm-4
      fieldset(class="border configure-fieldset required pb-2")
        legend(class="w-auto") assessments with passwords
        
        .container-fluid
          .row(class="mb-1")
            .col-sm 
              .assessment-item(class="template assessment-template hide-me")
              .assessment-container

  .row(class="welcome-outer mt-4 hide-me")
      fieldset(class="border configure-fieldset required pb-2")
        legend(class="w-auto") mentor welcome letter
        
        .container-fluid
          .row(class="mb-1")
            .col-sm
              div format
              
              .form-check(class="ms-4")
                input(type="radio" class="form-check-input output-format" name="outputFormat" value="msword" id="outputWord" checked)
                label(class="form-check-label" for="outputWord") MS Word (suitable for PDF)

              .form-check(class="ms-4")
                input(type="radio" class="form-check-input output-format" name="outputFormat" value="html" id="outputHTML")
                label(class="form-check-label" for="outputHTML") HTML (suitable for copy/paste to Gmail)

              button(class="btn-mentor-welcome welcome btn btn-secondary mt-3") download
  