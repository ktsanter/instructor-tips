mixin managerContainer()
  .row
    .col-sm(class="eventlist-container")
      table(class="table table-striped table-hover table-sm")
        thead(class="table-primary")
          th(class="header header-student") student
          th(class="header header-section") section
          th(class="header header-enddate") end date
          th
            i(class="event-icon event-calendaricon ms-1 far fa-calendar-alt" title="open calendar")
            i(class="event-icon event-exporticon fas fa-file-excel" title="export to Excel")
            form(id="formExport" class="export-form hide-me" action="enddate-manager/export" enctype="multipart/form-data" method="post")
              textarea(id="exportData" class="export-data" name="export-data")

        tbody(class="eventlist-body")
