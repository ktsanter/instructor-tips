mixin recipesEdit()
  .container-fluid(class="recipe-edit-container")
    .row(class="recipe-edit")
      .container-fluid('edit')
        .row
          .col-sm-6
            .form-floating
              input(type="text" class="input-name form-control" id="inputName" placeholder="recipe name")
              label(for="inputName") recipe name
              
          .col-sm
            .rating-container
              input(type="radio" id="star5" name="rating" class="recipe-rating-input" value="5")
              label(for="star5" title="5 stars") 5 stars
              input(type="radio" id="star4" name="rating" class="recipe-rating-input" value="4")
              label(for="star4" title="4 stars") 4 stars
              input(type="radio" id="star3" name="rating" class="recipe-rating-input" value="3")
              label(for="star3" title="3 stars") 3 stars
              input(type="radio" id="star2" name="rating" class="recipe-rating-input" value="2")
              label(for="star2" title="2 stars") 2 stars
              input(type="radio" id="star1" name="rating" class="recipe-rating-input" value="1")
              label(for="star1" title="1 star") 1 star
              
          .col-sm-2
            .form-check(class="mt-2 pt-1")
              input(class="check-made form-check-input" type="checkbox" name="checkMade" id="checkMade")
              label(class="form-check-label" for="checkMade") made
              
        .row(class="mt-1")
          .col-sm
            .form-floating
              input(type="text" class="input-tags form-control" id="tagsInput" placeholder="default")
              label(for="tagsInput") tags    

          .col-sm
            label(for="file-import" class="importfile-label btn btn-secondary" title="import recipe") import
            input(type="file" class="importfile" id="file-import" accept=".pdf,.txt")
            
        .row(class="mt-1")
          .col-sm
            .form-floating
              input(type="text" class="input-yield form-control" id="inputYield" placeholder="yield")
              label(for="inputYield") yield

          .col-sm
            .form-floating
              input(type="text" class="input-imageurl form-control" id="inputImageURL" placeholder="image url")
              label(for="inputImageURL") image URL

                                        
        .row(class="mt-2")
          .col-sm
            .ingredients-container
              table(class="ingredients-table table table-striped table-hover table-sm")
                thead(class="ingredients-head table-primary")
                  th(class="header header-controls" field-name="controls")
                    i(class="add-ingredient far fa-plus-square" title="add new ingredient")
                  
                  th(class="header header-ingredient" field-name="ingredient")
                    span(class="recipes-headerlabel label-ingredient") ingredients
                    i(class="bulk-add-ingredients far fa-dot-circle" title="bulk add ingredients")
                  
                tbody(class="ingredients-body")

        .row(class="mt-1")
          .col-sm
            .form-floating          
              textarea(class="form-control input-instructions" id="inputInstructions" maxlength="10000")
              label(for="inputInstructions") instructions
        
        .row(class="mt-1")
          .col-sm
            .form-floating          
              textarea(class="form-control input-notes" id="inputNotes" maxlength="2000")
              label(for="inputNotes") notes    

            
    .row(class="recipe-delete")
      .col-sm
        div
          |This recipe will be deleted and this action cannot be undone. 
        div(class="mt-1")
          .recipe-deletion-name
        div(class="mt-2")
          |Are you sure you want to delete this recipe?

    .row(class="mt-2")
      .col-sm
        button(class="button-okay btn btn-aardvark me-2") okay
        button(class="button-cancel btn btn-aardvark") cancel
        
                
    div(class="hide-me")
      table
        thead
        tbody
          tr(class="ingredients-templaterow")
            td(class="controls")         
              i(class="delete-ingredient far fa-trash-alt" title="delete ingredient")
            td(class="ingredient")
              span(class="ingredient-text" title="edit ingredient")
              input(type="text" class="ingredient-input" maxlength="100") 
