mixin recipesEdit()
  .container-fluid(class="recipe-edit-container")
    .row(class="recipe-edit")
      .container-fluid('edit')
        .row
          .col-sm
            .form-floating
              input(type="text" class="input-name form-control" id="inputName" placeholder="recipe name")
              label(for="inputName") recipe name
              
        .row(class="mt-1")
          .col-sm
            .form-floating
              input(type="text" class="input-tags form-control" id="tagsInput" placeholder="default")
              label(for="tagsInput") tags              
            
        .row(class="mt-1")
          .col-sm
            .ingredients-container
              table(class="ingredients-table table table-striped table-hover table-sm")
                thead(class="ingredients-head table-primary")
                  th(class="header header-controls" field-name="controls")
                    i(class="add-ingredient far fa-plus-square" title="add new ingredient")
                  
                  th(class="header header-ingredient" field-name="ingredient")
                    span(class="recipes-headerlabel label-ingredient") 
                  
                tbody(class="ingredients-body")               
            
        .row(class="mt-1")
          .col-sm
            .form-floating          
              textarea(class="form-control input-instructions" id="inputInstructions" maxlength="10000")
              label(for="inputInstructions") instructions
        
        .row(class="mt-1")
          .col-sm
            .form-floating          
              textarea(class="form-control input-notes" id="inputNotes" maxlength="2000")
              label(for="inputNotes") notes    

            
    .row(class="recipe-delete")
      .col-sm
        div
          |This recipe will be deleted and this action cannot be undone. 
        div(class="mt-1")
          .recipe-deletion-name
        div(class="mt-2")
          |Are you sure you want to delete this recipe?

    .row(class="mt-2")
      .col-sm
        button(class="button-okay btn btn-aardvark me-2") okay
        button(class="button-cancel btn btn-aardvark") cancel
        
                
    div(class="hide-me")
      table
        thead
        tbody
          tr(class="ingredients-templaterow")
            td(class="controls")         
              i(class="delete-ingredient far fa-trash-alt" title="delete ingredient")
            td(class="ingredient")
              span(class="ingredient-text" title="edit ingredient")
              input(type="text" class="ingredient-input" maxlength="100") 
