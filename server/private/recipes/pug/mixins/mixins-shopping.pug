mixin shoppingContainer()
  .row
    .col-sm
      .shoppinglist-table-container
        table(class="shoppinglist-table table table-striped table-hover table-sm")
          thead(class="shoppinglist-head table-primary")
            th(class="header header-controls" field-name="controls")

            th(class="header header-ingredientname" field-name="ingredient") shopping list item
            
          tbody(class="shoppinglist-body")
          
    div(class="hide-me")
      table
        thead
        tbody
          tr(class="shoppinglist-templaterow")
            td(class="controls")
              input(class="shoppingitem-check form-check-input ms-1" type="checkbox")
              
            td(class="ingredientname")
              span(class="ingredientnamet-text")
              i(class="delete-icon far fa-trash-alt ms-2" title="remove ingredient from list")
