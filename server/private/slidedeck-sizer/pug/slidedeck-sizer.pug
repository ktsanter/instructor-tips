include ../../common/pug/fontawesome-mixins.pug
include ../../common/pug/bootstrap-mixins.pug
include ../../common/pug/jquery-mixins.pug

doctype html
html(lang="en")
  head
    title Slide deck sizer
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    
    +fontawesome()
    +bootstrapstyle()
    
    style
      include ../styles/slidedeck-sizer.css
    
    +addJQuery()
    script(data-main="/scripts/slidedeck-sizer/require_slidedeck-sizer", src="/scripts/require.js")      \
    
  body(class="colorscheme")
    .contents
      //.error-container
      
      .container-fluid(class="sizer-contents")
        .row(class="mb-1")
          .col-sm          
            .sizer-title(class="px-1") Slide deck sizer
              span(class="embed-controls hide-me" title="copy embed code")
                i(class="fas fa-angle-left")
                i(class="fas fa-angle-right")
              .error-container  
              span(class="sizer-version") v2.01
          
        .row(class="mb-1")
          .col-sm-7
            .input-group(class="input-group-sm")
              span(class="input-group-text sizerui-label" id="inputDeck") slide deck
              input(type="text" class="input-decklink form-control" aria-label="link to slide deck" aria-describedby="inputDeck" placeholder="link to published slide deck")

        .row(class="mb-1")
          .col-sm-4
            .input-group(class="input-group-sm")
              span(class="input-group-text sizerui-label" id="inputPadding") padding
              input(type="number" class="input-padding form-control" aria-label="padding percentage" aria-describedby="inputPadding" value="60" min="30" max="200" step="0.1")
              span(class="input-group-text") %

        .row(class="mb-1")
          .col-sm-4
            .input-group(class="input-group-sm")
              span(class="input-group-text sizerui-label") navigation
              input(checked class="check-navigation form-check-input mt-0" type="checkbox" value="" aria-label="checkbox for including navigation controls")

        .row(class="mb-1")
          .col-sm
            .preview(class="hide-me")