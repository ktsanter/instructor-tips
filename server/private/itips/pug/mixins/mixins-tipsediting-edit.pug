mixin tipseditingEdit()
  .container-fluid(class="tipsediting-edit-container")
    .row(class="subcontainer tipsediting-add")
      .col-sm
        .container-fluid
          .row
            .col-sm
            .tipeditor-container(class="tipeditor-container")
              +makeTinyMCE("tipeditorAdd")
              
          .row
            .col-sm
              .form-floating
                input(type="text" class="input-tags form-control" id="tagsInput" placeholder="default")
                label(for="tagsInput") tags
          
          .row
            .col-sm
              button(class="button-save btn btn-primary") save
              button(class="button-cancel btn btn-primary") cancel
              
    .row(class="subcontainer tipsediting-edit")
      .col-sm
        .container-fluid
          .row
            .col-sm
            .tipeditor-container(class="tipeditor-container")
              +makeTinyMCE("tipeditorEdit")
              
          .row
            .col-sm
              .form-floating
                input(type="text" class="input-tags form-control" id="tagsInput" placeholder="default")
                label(for="tagsInput") tags
          
          .row
            .col-sm
              button(class="button-save btn btn-primary") save
              button(class="button-cancel btn btn-primary") cancel
             
    .row(class="subcontainer tipsediting-delete")
      .col-sm
        .container-fluid
          .row
            .col-sm
              |This tip will be deleted and this action cannot be undone. 
              span(class="tipusage-deletion") xx
              br
              .tipcontent-deletion
              br
              |Are you sure you want to delete this tip?
          
          .row
            .col-sm
              button(class="button-save btn btn-primary") save
              button(class="button-cancel btn btn-primary") cancel