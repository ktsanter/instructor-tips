mixin tipseditingEdit()
  .container-fluid(class="tipsediting-edit-container")
    .row(class="subcontainer tipsediting-add")
      .col-sm
        .container-fluid
          .row
            .col-sm
            .tipeditor-container(class="tipeditor-container")
              +makeTinyMCE("tipeditorAdd")
              
          .row(class="mt-1")
            .col-sm
              .form-floating
                input(type="text" class="input-tags form-control" id="tagsInput_add" placeholder="default")
                label(for="tagsInput_add") tags
          
          .row(class="mt-1")
            .col-sm
              button(class="button-save btn btn-aardvark me-1") save
              button(class="button-cancel btn btn-aardvark") cancel
              
    .row(class="subcontainer tipsediting-edit")
      .col-sm
        .container-fluid
          .row
            .col-sm
            .tipeditor-container(class="tipeditor-container")
              +makeTinyMCE("tipeditorEdit")
              
          .row(class="mt-1")
            .col-sm
              .form-floating
                input(type="text" class="input-tags form-control" id="tagsInput_edit" placeholder="default")
                label(for="tagsInput_edit") tags
          
          .row(class="mt-1")
            .col-sm
              button(class="button-save btn btn-aardvark me-1") save
              button(class="button-cancel btn btn-aardvark") cancel
             
    .row(class="subcontainer tipsediting-delete")
      .col-sm
        .container-fluid
          .row
            .col-sm
              div
                |This tip will be deleted and this action cannot be undone. 
                span(class="tipusage-deletion") xx
              div(class="mt-1")
                .tipcontent-deletion
              div(class="mt-2")
                |Are you sure you want to delete this tip?
          
          .row(class="mt-1")
            .col-sm
              button(class="button-save btn btn-aardvark me-1") confirm
              button(class="button-cancel btn btn-aardvark") cancel