mixin schedulingConfigure()
  .container-fluid(class="scheduling-configure-container")
    .row(class="subcontainer configure-add")
      .col-sm
        .container-fluid
          .row
            .col-sm
              |create new schedule
          
          .row
            .col-sm
              .form-floating
                input(type="text" class="input-name form-control" id="inputName-Add" placeholder="schedule name")
                label(for="inputName-Add") schedule name

          .row
            .col-sm
              .form-floating
                input(type="number" class="input-length form-control" id="inputLength-Add" placeholder="number of weeks" value="20" min="4" max="40")
                label(for="inputLength-Add") schedule length

          .row
            .col-sm
              .form-floating
                input(type="date" class="input-start form-control" id="inputStart" placeholder="starting date")
                label(for="inputStart-Add") starting date
          
          .row
            .col-sm
              button(class="button-save btn btn-primary") save
              button(class="button-cancel btn btn-primary") cancel

    .row(class="subcontainer configure-edit")
      .col-sm
        .container-fluid
          .row
            .col-sm
              |edit schedule parameters
          
          .row
            .col-sm
              .form-floating
                input(type="text" class="input-name form-control" id="inputName-Edit" placeholder="schedule name")
                label(for="inputName-Edit") schedule name

          .row
            .col-sm
              .form-floating
                input(type="date" class="input-start form-control" id="inputStart" placeholder="starting date")
                label(for="inputStart") starting date
          
          .row
            .col-sm
              button(class="button-save btn btn-primary") save
              button(class="button-cancel btn btn-primary") cancel
          
    .row(class="subcontainer configure-delete")
      .col-sm
        .container-fluid
          .row
            .col-sm
              |delete schedule
              
          .row
            .col-sm
              |The schedule named "
              span(class="schedule-name")
              |" will be deleted.
              br
              |Deletions cannot be undone.
              br
              br
              |Are you sure you want to delete this schedule?
              
          .row
            .col-sm
              button(class="button-save btn btn-primary") confirm
              button(class="button-cancel btn btn-primary") cancel
