- var instructorname = 'Kevin Santer'
- var phone = '517.993.9829'
- var instructoremail = 'ksanter@mivu.org'
- var instructoremaillink = 'mailto:' + instructoremail
- var slplink = 'https://slp.michiganvirtual.org/PublicWelcome.aspx'
- var specpopname = 'Tom Ballew'
- var specpopemail = 'tballew@michiganvirtual.org'
- var specpopemaillink = 'mailto:' + specpopemail
- var instructorschedule = 'https://calendly.com/ksanter/discussion-based-assessment'

mixin title(audience)
  .title
    .title-text
      if audience == "student"
        |Welcome to 
      else      
        |Welcome to your role as a mentor in 
      em= coursename

mixin idcard
  .idcard-container
    .container(class="idcard border")
      .row
        .col-sm(id="logoContainer")
          img(src="https://res.cloudinary.com/ktsanter/image/upload/v1613234395/welcome%20letter/MVlogo_small2.png" class="img-responsive" alt="Michigan Virtual logo" id="logoImage")

      .row
        .container
          .row
            .col-3
              img(src="https://res.cloudinary.com/ktsanter/image/upload/v1613234395/welcome%20letter/instructor.jpg" class="img-responsive float-left" alt="Mr. Kevin Santer" id="instructorImage")
              
            .col-9 
              .container
                .row
                  .col-sm
                    strong= instructorname
                .row
                  .container
                    .row
                      .col-3 phone&nbsp;
                      .col-sm #{phone}
                    .row
                      .col-3 email
                      .col-sm 
                        +linktoslp
                        |&nbsp;or
                    .row
                      .col-3
                      .col-sm 
                        a(href=instructoremaillink, target="_blank") #{instructoremail}
                    .row
                      .col-3 Zoom
                      .col-sm
                        a(href=instructorschedule target="_blank") schedule a meeting
                                            
mixin linktoslp
  a(href=slplink, target="_blank") SLP
  
mixin specpopcontact
  span #{specpopname}
  
mixin linktospecpop
  a(href=specpopemaillink, target="_blank") #{specpopemail}
  
mixin keypoints(audience, keypoints, ap)
  div(class="keypoints border")
    div(class="keypoints-label") Key points

    ul
      each point in keypoints
        li !{point}  
