mixin shareContainer()
  .row
    .col-sm 
      .share-label student
      
    .col-sm
      button(class="btn btn-primary btnLinkStudent") link to letter
      
    .col-sm
      button(class="btn btn-primary btnMessageStudent") formatted message
      
  .row
    .col-sm 
      .share-label mentor
      
    .col-sm
      button(class="btn btn-primary btnLinkMentor") link to letter
      
    .col-sm
      button(class="btn btn-primary btnMessageMentor") formatted message      