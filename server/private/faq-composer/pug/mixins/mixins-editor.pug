mixin editorContainer()
  .row
    .col-4(class="hierarchy-container")
    
    .col-sm 
      .container-fluid
        .row: col-sm(class="navEditor-item-edit")
          .container-fluid
            .row: .col-sm
              div(class="input-group mb-3")
                span(class="input-group-text" id="basic-addon1") label
                input(type="text" class="navEditor-itemlabel form-control" aria-label="label" aria-describedby="basic-addon1")
              
              
            .row: .col-sm
              div(class="form-floating")
                textarea(class="navEditor-itemcontent navEditor-markdown-content form-control" placeholder="enter Markdown for item here")
          
        .row: col-sm(class="navEditor-item-rendered")
          .container-fluid
            .row: .col-sm
              input(class="navEditor-itemcontent navEditor-rendered-content form-control" type="text" aria-label="readonly input example" readonly)
