doctype html
html(lang="en")
  head
    title image flipper generator
    meta(charset="utf-8")
    
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.2/css/all.css", integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay", crossorigin="anonymous")    

    style
      include ../styles/colorschemes.css    
      include ../styles/generator.css
    
    script(data-main="/scripts/image-flipper/require_generator", src="/scripts/require.js")    
      
    body(class='colorscheme')
      .titlecontainer
        .titletext Image flipper generator
        span(class="title-control control-preview" title="preview")
          i(class="control-icon fa fa-eye")
        span(class="title-control control-embed" title="generate embed code")
          i(class="control-icon fas fa-angle-left")
          i(class="control-icon fas fa-angle-right")
        
      .contents
        .controls
          table
            tr
              td(class="control-label") title
              td
                input(class="control-title" type="text" value="" size="30" maxlength="30")
            
            tr
              td(class="control-label") subtitle
              td
                input(class="control-subtitle" type="text" value="" size="60" maxlength="60")
              
            tr
              td(class="control-label") colors
              td
                .control-color(class="flipper-colorscheme-000") sample text
                  
                .color-options(class="hide-me")
                  .flipper-colorscheme-000(class="color-sample") sample text
                  .flipper-colorscheme-001(class="color-sample") sample text
                  .flipper-colorscheme-002(class="color-sample") sample text
                  .flipper-colorscheme-003(class="color-sample") sample text
                  .flipper-colorscheme-004(class="color-sample") sample text
                  .flipper-colorscheme-005(class="color-sample") sample text
              
            tr
              td(class="control-label") layout
              td
                select(class="control-layout")
                  option(value="3x3") 3 x 3
                  option(value="4x4") 4 x 4
                  option(value="4x5" selected) 4 x 5
                  option(value="5x5") 5 x 5
                  option(value="6x5") 6 x 5
        
        .layout
          table
          .swaparea(class="hide-me")
        
        .preview(class="hide-me") preview
        
        .embed(class="hide-me") embed
      