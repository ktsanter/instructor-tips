mixin shareContainer()
  .row(class="my-3")
    .col-sm-6
      .form-floating
        input(type="text" class="form-control input-link" id="shareLink" disabled)
        label(for="shareLink") link
    .col-sm-1
      .form-floating
        button(class="btn btn-secondary py-1 btnCopyLink" title="copy link to clipboard") copy
      
  .row(class="my-3")
    .col-sm-6
      .form-floating
        textarea(class="form-control input-embed" id="shareEmbed" disabled)
        label(for="shareEmbed") embed
    .col-sm-1
      .form-floating
        button(class="btn btn-secondary py-1 btnCopyEmbed" title="copy embed code to clipboard") copy

  .row(class="my-3")
    .col-sm-6
      .form-floating
        .copy-message
