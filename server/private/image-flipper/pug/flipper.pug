doctype html
html(lang="en")
  head
    title image flipper
    meta(charset="utf-8")
    
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.2/css/all.css", integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay", crossorigin="anonymous")    

    style
      include ../styles/colorschemes.css
      include ../styles/flipper.css
    
    script(data-main="/scripts/image-flipper/require_flipper", src="/scripts/require.js")    
      
    body(class="flipper")
      .contents(class="hide-me")
      
        .flipper-title
          .flipper-title-text
          button(class="flipper-button") reset
        
        .flipper-subtitle
          .flipper-subtitle-text
        
        .flipper-container
          .flipper-card
                
      button(class="card-proto front-proto flipper-card-button hide-me") #n
      
      div(class="card-proto back-proto back hide-me" )
        img(alt="invalid image" src="https://res.cloudinary.com/ktsanter/image/upload/v1612802166/image%20flipper%20resources/invalid_image.png")


